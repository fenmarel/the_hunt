<h1>Sign Up!</h1>

<form action="<%= users_url %>" method="post" accept-charset="utf-8">

  <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>" id="authenticity_token">

  <label for="username">Username</label>
  <input type="text" name="user[username]"
         value="<%= @user.username %>" id="username">

  <label for="email">Email</label>
  <input type="text" name="user[email]" value="<%= @user.email %>" id="email">

  <label for="password">Password</label>
  <input type="password" name="user[password]" id="password">

  <label for="password_confirmation">Password Confirmation</label>
  <input type="password"
         name="user[password_confirmation]" id="password_confirmation">

  <p><input type="submit" value="Start Hunting!"></p>
</form>